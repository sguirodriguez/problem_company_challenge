{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",                                  
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",                                               
    "rootDir": "./src",
    "removeComments": true,                                
    "typeRoots": [
    "./node_modules/@types",
    "./src/@types"
    ],                                                             
    "esModuleInterop": true,  
    "resolveJsonModule": true,                          
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths":{
      "@controllers/*":["./src/controllers/*"],
      "@models/*":["./src/models/*"],
    }            
  }
}
